+                                             gimp_image_get_height (gimp_clip->image),
+                                             NULL);
+
+          if (pixbuf)
+            {
+              /* Set the pixbuf directly - this writes the data immediately
+               * instead of using a callback */
+              gtk_clipboard_set_image (clipboard, pixbuf);
+              gtk_clipboard_store (clipboard);
+              g_object_unref (pixbuf);
+            }
+        }
+    }
+
+  /* Don't call gtk_clipboard_clear() as that would delete the data.
+   * Don't free the GimpClipboard object either - let it be cleaned up
+   * when the Gimp object is finalized.
+   */
 }
 
